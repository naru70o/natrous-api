datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Tour {
    id              String     @id @default(auto()) @map("_id") @db.ObjectId
    name            String     @unique
    slug            String     @unique
    duration        Int
    maxGroupSize    Int
    difficulty      Difficulty
    ratingsAverage  Float      @default(4.5)
    ratingsQuantity Int        @default(0)
    price           Float
    priceDiscount   Float?
    summary         String
    description     String?
    imageCover      String
    images          String[]
    createdAt       DateTime   @default(now())
    startDates      DateTime[]
    secretTour      Boolean    @default(false)
}

enum Difficulty {
    easy
    medium
    difficult
}
